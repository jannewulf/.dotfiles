[core]
  editor = vim
  excludesfile = ~/.config/git/ignore
  pager = delta

[alias]
  amend = commit --amend --reuse-message=HEAD
  a = add
  ci = commit
  co = checkout
  d = diff
  dh = diff HEAD
  l = log --graph
  ld = "!sh -c \"git log --since '${1:-1} days ago' --author $(git config user.email)\" -"
  s = status -sb --show-stash
  st = status
  whoami = "!sh -c 'printf \"%s %s\n\" \"$(git config user.name)\" \"($(git config user.email))\"'"
  wip = "!sh -c 'git add -A; git rm $(git ls-files --deleted) 2> /dev/null; git commit --no-verify --no-gpg-sign -m \"--wip-- [skip ci]\"'"
  unwip = "!sh -c 'git log -n 1 | grep -q -c -- \"--wip--\" && git reset HEAD~1'"

[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset

[include]
  path = ~/.config/delta/themes.gitconfig

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  line-numbers = true
  side-by-side = true
  syntax-theme = "nord"

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[user]
    # Do not guess the user's identity.
    useConfigOnly = true

    # [!] DO NOT store sensitive information such as the Git user
    # credentials (`name` / `email`), or things such as the `signingkey`
    # in this file, add them in `~/.config/git/config.local`!

[credential]
	helper = cache --timeout=3600

[include]
    # Load local configs.
    # [!] The following needs to remain at the end of this file in
    #     order to allow any of the above configs to be overwritten
    #     by the local ones
    path = ~/.config/git/config.local

